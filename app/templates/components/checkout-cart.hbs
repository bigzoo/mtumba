<div>
{{#each shoppingCart.items as |item|}}
  <div>
    <b>{{item.name}}</b>
    <br>
    Ksh.{{item.cost}}
    <br>
    <i>{{item.shortDescription}}</i>
    <br>
    <img src={{item.img1}} alt={{item.name}}>
    <button {{action 'removeFromCart' item}}>Remove this item from cart?</button>
    <hr>
  </div>
{{/each}}
</div>
{{yield}}
